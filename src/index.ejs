                    <h2 id="current-location-temp"></h2>
                    <img id="current-condition-icon" src="" alt="" />
                    <p id="current-condition-text"></p>
                    <div id="current-high-low-temp">
                        <p id="current-high-temp"></p>
                        <p id="current-low-temp"></p>
                    </div>
                </div>
                <div id="hourly-forecast">
                    <div class="hourly-forecast-cards">
                        <div class="hourly-forecast-card"></div>

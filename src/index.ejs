                        <div class="hourly-forecast-card"></div>
                        <div class="hourly-forecast-card"></div>
                        <div class="hourly-forecast-card"></div>
                        <div class="hourly-forecast-card"></div>
                        <div class="hourly-forecast-card"></div>
                        <div class="hourly-forecast-card"></div>
                        <div class="hourly-forecast-card"></div>
                        <div class="hourly-forecast-card"></div>
                        <div class="hourly-forecast-card"></div>
                        <div class="hourly-forecast-card"></div>
                    </div>
                </div>
            </div>
            <div id="seven-day-and-other-info">
                <div id="seven-day-forecast">
                    <div class="seven-day-forecast-cards">
                        <div class="seven-day-forecast-card"></div>
                        <div class="seven-day-forecast-card"></div>
                        <div class="seven-day-forecast-card"></div>
                        <div class="seven-day-forecast-card"></div>
                        <div class="seven-day-forecast-card"></div>
                        <div class="seven-day-forecast-card"></div>
                        <div class="seven-day-forecast-card"></div>
                    </div>
                </div>
                <div id="other-info">
                    <div class="other-info-cards">
                        <div class="other-info-card"></div>
                        <div class="other-info-card"></div>
                        <div class="other-info-card"></div>
                        <div class="other-info-card"></div>
                        <div class="other-info-card"></div>
